<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:padding="@dimen/padding_medium"
            android:text="@string/block_msg"
            tools:context=".WizDroidAcitivity"/>

    <ToggleButton
            android:id="@+id/toggleButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_margin="32dp"
            android:background="@drawable/button"
            android:textColor="@android:color/white"
            android:textOff="WizDroid is OFF"
            android:textOn="WizDroid is ON"/>

    <ImageView
            android:id="@+id/wizdroid_off"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launcher"
            android:visibility="invisible"/>
    <ImageView
            android:id="@+id/wizdroid_on"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/wizdroid"
            android:visibility="invisible"/>

</RelativeLayout>
